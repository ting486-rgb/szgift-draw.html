    <script>
        // å‚ä¸äººå‘˜æ•°æ®
        const participants = [
            { id: 'liztang', name: 'å”ä¸½ä¸½', wish: 'æ¸©é¦¨çš„ç¤¼ç‰©' },
            { id: 'mandycfhe', name: 'ä½•ç¿ èŠ³', wish: 'éšæ„' },
            { id: 'joyycsun', name: 'å­™å¶è¶…', wish: 'éšæ„' },
            { id: 'jadyjian', name: 'è¹‡ç­±ä½³', wish: 'å®ç”¨ ç®€çº¦ å¥½çœ‹' },
            { id: 'swanyuan', name: 'è¢åŒåŒ', wish: 'å®ç”¨æ€§ã€é•¿æœŸå¯ç”¨çš„ã€å¥½çœ‹' },
            { id: 'tingtingong', name: 'é¾”å©·', wish: 'å®ç”¨çš„ è®©äººè½»æ¾çš„ å¹¸ç¦æ„Ÿæå‡çš„' },
            { id: 'anqifeng', name: 'AN QI FENG', wish: 'é¦™è–°èœ¡çƒ›' },
            { id: 'vivhuang', name: 'é»„ç»´èˆŸ', wish: 'å°ä¼™ä¼´å‡†å¤‡çš„éƒ½å–œæ¬¢ï½' },
            { id: 'rosiessluo', name: 'ç½—æ€æ€', wish: 'æ¼‚äº® å®ç”¨ å“è´¨' },
            { id: 'ludwigmo', name: 'è«å°èŠƒ', wish: 'æ²»æ„ˆ' },
            { id: 'Jackie', name: 'Jackie', wish: 'å®ç”¨' },
            { id: 'Feliciajin', name: 'Feliciajin', wish: 'kidsï¼Œfunnyï¼Œnot doll' }
        ];
        
        // DOM å…ƒç´ 
        const participantsList = document.getElementById('participantsList');
        const drawBtn = document.getElementById('drawBtn');
        const resetBtn = document.getElementById('resetBtn');
        const loading = document.getElementById('loading');
        const resultSection = document.getElementById('resultSection');
        const resultList = document.getElementById('resultList');
        const copyBtn = document.getElementById('copyBtn');
        const exportBtn = document.getElementById('exportBtn');
        const copiedNotice = document.getElementById('copiedNotice');
        
        // åˆå§‹åŒ–å‚ä¸äººå‘˜åˆ—è¡¨
        function initParticipantsList() {
            participantsList.innerHTML = '';
            participants.forEach(person => {
                const item = document.createElement('div');
                item.className = 'participant-item';
                item.innerHTML = `
                    <div class="participant-name">${person.name} (${person.id})</div>
                    <div class="participant-wish">ğŸ å¿ƒæ„¿ï¼š${person.wish}</div>
                `;
                participantsList.appendChild(item);
            });
        }
        
        // éšæœºåŒ¹é…ï¼ˆç¡®ä¿ä¸ä¼šæŠ½åˆ°è‡ªå·±ï¼‰
        function randomMatch() {
            // åˆ›å»ºå‚ä¸è€…IDæ•°ç»„
            const givers = [...participants.map(p => p.id)];
            const recipients = [...givers];
            
            // Fisher-Yates æ´—ç‰Œç®—æ³•
            function shuffle(array) {
                let currentIndex = array.length, randomIndex;
                while (currentIndex != 0) {
                    randomIndex = Math.floor(Math.random() * currentIndex);
                    currentIndex--;
                    [array[currentIndex], array[randomIndex]] = [array[randomIndex], array[currentIndex]];
                }
                return array;
            }
            
            // æ´—ç‰Œå¹¶æ£€æŸ¥æ˜¯å¦æœ‰è‡ªåŒ¹é…
            let shuffledRecipients;
            let tries = 0;
            do {
                shuffledRecipients = shuffle([...recipients]);
                tries++;
                // é˜²æ­¢æ— é™å¾ªç¯ï¼ˆç†è®ºä¸Šä¸ä¼šå‘ç”Ÿï¼‰
                if (tries > 1000) break;
            } while (givers.some((giver, index) => giver === shuffledRecipients[index]));
            
            // æ„å»ºåŒ¹é…ç»“æœ
            const matches = givers.map((giverId, index) => {
                const recipientId = shuffledRecipients[index];
                const giver = participants.find(p => p.id === giverId);
                const recipient = participants.find(p => p.id === recipientId);
                return { giver, recipient };
            });
            
            return matches;
        }
        
        // æ˜¾ç¤ºæŠ½ç­¾ç»“æœ
        function displayResults(matches) {
            resultList.innerHTML = '';
            matches.forEach(match => {
                const item = document.createElement('div');
                item.className = 'result-item';
                item.innerHTML = `
                    <div class="gifter">ğŸ èµ é€è€…ï¼š${match.giver.name}</div>
                    <div class="recipient">ğŸ¯ æ¥æ”¶è€…ï¼š${match.recipient.name}</div>
                    <div class="recipient-wish">ğŸ’– æ¥æ”¶è€…å¿ƒæ„¿ï¼š${match.recipient.wish}</div>
                `;
                resultList.appendChild(item);
            });
            
            // æ˜¾ç¤ºç»“æœåŒºåŸŸ
            loading.style.display = 'none';
            resultSection.style.display = 'block';
        }
        
        // å¤åˆ¶ç»“æœåˆ°å‰ªè´´æ¿
        function copyResults() {
            let text = 'äº¤æ¢ç¤¼ç‰©æŠ½ç­¾ç»“æœï¼š\n\n';
            const resultItems = document.querySelectorAll('.result-item');
            resultItems.forEach((item, index) => {
                const gifter = item.querySelector('.gifter').textContent.replace('ğŸ èµ é€è€…ï¼š', '');
                const recipient = item.querySelector('.recipient').textContent.replace('ğŸ¯ æ¥æ”¶è€…ï¼š', '');
                const wish = item.querySelector('.recipient-wish').textContent.replace('ğŸ’– æ¥æ”¶è€…å¿ƒæ„¿ï¼š', '');
                text += `${index + 1}. ${gifter} â†’ ${recipient}\n   å¿ƒæ„¿ï¼š${wish}\n\n`;
            });
            
            navigator.clipboard.writeText(text).then(() => {
                copiedNotice.style.display = 'block';
                setTimeout(() => {
                    copiedNotice.style.display = 'none';
                }, 2000);
            }).catch(err => {
                alert('å¤åˆ¶å¤±è´¥ï¼Œè¯·æ‰‹åŠ¨å¤åˆ¶ï¼š' + err);
            });
        }
        
        // å¯¼å‡ºç»“æœä¸ºæ–‡æœ¬æ–‡ä»¶
        function exportResults() {
            let text = 'äº¤æ¢ç¤¼ç‰©æŠ½ç­¾ç»“æœ\n==================\n\n';
            const resultItems = document.querySelectorAll('.result-item');
            resultItems.forEach((item, index) => {
                const gifter = item.querySelector('.gifter').textContent.replace('ğŸ èµ é€è€…ï¼š', '');
                const recipient = item.querySelector('.recipient').textContent.replace('ğŸ¯ æ¥æ”¶è€…ï¼š', '');
                const wish = item.querySelector('.recipient-wish').textContent.replace('ğŸ’– æ¥æ”¶è€…å¿ƒæ„¿ï¼š', '');
                text += `${index + 1}. èµ é€è€…ï¼š${gifter}\n   æ¥æ”¶è€…ï¼š${recipient}\n   æ¥æ”¶è€…å¿ƒæ„¿ï¼š${wish}\n\n`;
            });
            
            const blob = new Blob([text], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `äº¤æ¢ç¤¼ç‰©æŠ½ç­¾ç»“æœ_${new Date().toLocaleString().replace(/[/:]/g, '-')}.txt`;
            a.click();
            URL.revokeObjectURL(url);
        }
        
        // äº‹ä»¶ç›‘å¬
        drawBtn.addEventListener('click', () => {
            // ç¦ç”¨æŠ½ç­¾æŒ‰é’®ï¼Œå¯ç”¨é‡ç½®æŒ‰é’®
            drawBtn.disabled = true;
            resetBtn.disabled = false;
            
            // æ˜¾ç¤ºåŠ è½½çŠ¶æ€
            loading.style.display = 'block';
            
            // æ¨¡æ‹ŸåŠ è½½å»¶è¿Ÿï¼Œæå‡ç”¨æˆ·ä½“éªŒ
            setTimeout(() => {
                const matches = randomMatch();
                displayResults(matches);
            }, 1500);
        });
        
        resetBtn.addEventListener('click', () => {
            // é‡ç½®ç•Œé¢
            loading.style.display = 'none';
            resultSection.style.display = 'none';
            drawBtn.disabled = false;
            resetBtn.disabled = true;
        });
        
        copyBtn.addEventListener('click', copyResults);
        exportBtn.addEventListener('click', exportResults);
        
        // åˆå§‹åŒ–
        initParticipantsList();
    </script>
